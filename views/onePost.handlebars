<div class="row">
  <div class="col-md-6">

    <div>
      <h2>{{post.title}}</h2>
      <div>
        <p>{{post.content}}</p>
      </div>
      <div>
        <p>{{date_created}}</p>
      </div>
    </div>

    <div>
      <h3>Comments</h3>

      <div>
      {{#each post.Comments}}

        <div>
          <p>{{comment}}</p>
        </div>
      {{/each}}
    </div>

    <div>
      <h3>Got Something to Say?</h3>
      <form id="commentForm" class="form">

        <div class="form-group">
          <label for="commentContent">Comment:</label>
        </div>
        <textarea
          class="form-input"
          id="commentContent"
        ></textarea>
        <div class="form-group">
          <button class=" comment btn btn-primary" type="submit" id={{post.id}}>Comment</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>